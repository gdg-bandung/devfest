  class="relative pt-32 pb-12 lg:pt-40 lg:pb-28 flex items-center justify-center px-8 lg:px-16 xl:px-[180px] before:absolute before:inset-0 before:bg-[url('/images/hero.webp')] before:opacity-15 before:bg-cover before:bg-center before:bg-no-repeat after:absolute after:inset-0 after:bg-[linear-gradient(180deg,rgba(12,28,45,0)_35.58%,rgba(12,28,45,0.440299)_80.29%,#0c1c2d_100%)] after:z-10"
