---
import BaseHead from "../components/layout/BaseHead.astro";
import Navbar from "../components/layout/Navbar.astro";
import Hero from "../components/landing-page/hero.astro";
import RunningText from "../components/landing-page/running-text.astro";
import About from "../components/landing-page/about.astro";
import SponsorPartners from "../components/landing-page/sponsor-partners.astro";
import Skills from "../components/landing-page/skills.astro";
import Community from "../components/landing-page/community.astro";
import Footer from "../components/layout/Footer.astro";
import Speakers from "../components/landing-page/speakers.astro";
import Ticket from "../components/landing-page/ticket.astro";
import FAQ from "../components/landing-page/faq";
// import Agenda from "../components/landing-page/agenda.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <!-- Navigation -->
    <Navbar />

    <!-- Hero Section -->
    <Hero />

    <!-- Running Text -->
    <RunningText id="running-text-1" />

    <!-- About Section -->
    <About />

    <!-- Speakers Section -->
    <Speakers />

    <!-- Agenda Section -->
    <!-- <Agenda /> -->

    <!-- Ticket Section -->
    <Ticket />

    <!-- Running Text -->
    <RunningText id="running-text-2" color="blue" />

    <!-- Sponsors & Partners Section -->
    <SponsorPartners />

    <!-- FAQ Section -->
    <FAQ client:visible />

    <!-- Skills Section -->
    <Skills />

    <!-- Community Section -->
    <Community />

    <!-- Footer -->
    <Footer />
  </body>
</html>
