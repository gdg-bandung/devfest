---
import BaseHead from "../components/layout/BaseHead.astro";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import { SITE_TITLE } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={`Payment Failed - ${SITE_TITLE}`} description="Your payment for DevFest Bandung 2025 could not be processed. Please try again or contact us for help." />
  </head>
  <body class="bg-black text-white">
    <!-- Navigation -->
    <Navbar />

    <!-- Failed Receipt Content -->
    <section class="pt-32 pb-16 px-8 lg:px-16 xl:px-[180px]">
      <div class="container mx-auto max-w-4xl">
        
        <!-- Error Message -->
        <div class="text-center mb-12">
          <div class="w-20 h-20 bg-red rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">Oopsyy!</h1>
          <p class="text-xl lg:text-2xl text-gray-300 mb-6">Your payment can't be processed.</p>
          <a 
            href="https://www.instagram.com/gdg_bandung/" 
            target="_blank"
            class="inline-flex items-center gap-2 bg-blue hover:bg-dark-blue text-white px-6 py-3 rounded-lg transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
