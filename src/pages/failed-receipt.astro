---
import BaseHead from "../components/layout/BaseHead.astro";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import { SITE_TITLE } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={`Payment Failed - ${SITE_TITLE}`} description="Your payment for DevFest Bandung 2025 could not be processed. Please try again or contact us for help." />
  </head>
  <body class="bg-black text-white">
    <!-- Navigation -->
    <Navbar />

    <!-- Failed Receipt Content -->
    <section class="pt-32 pb-16 px-8 lg:px-16 xl:px-[180px]">
      <div class="container mx-auto max-w-4xl">
        
        <!-- Error Message -->
        <div class="text-center mb-12">
          <div class="w-20 h-20 bg-red rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h1 class="text-4xl lg:text-6xl font-bold mb-4">Oopsyy!</h1>
          <p class="text-xl lg:text-2xl text-gray-300 mb-6">Your payment can't be processed.</p>
          <a 
            href="mailto:hi@gdgbandung.com" 
            class="inline-flex items-center gap-2 bg-blue hover:bg-dark-blue text-white px-6 py-3 rounded-lg transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contact us for help
          </a>
        </div>

        <!-- Event Info Card -->
        <div class="bg-dark-gray rounded-2xl p-8 mb-8">
          <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="mb-6 lg:mb-0">
              <img src="/logo.webp" alt="DevFest Bandung" class="w-48 mb-4" />
              <h2 class="text-2xl font-bold mb-2">DevFest Bandung 2025</h2>
              <p class="text-gray-300">The Biggest Developer Festival in Indonesia</p>
            </div>
            <div class="text-left lg:text-right">
              <div class="mb-4">
                <h3 class="text-lg font-semibold mb-2">üìÖ Date & Time</h3>
                <p class="text-gray-300">Saturday, November 29, 2025</p>
                <p class="text-gray-300">09:00 AM - 05:00 PM</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2">üìç Venue</h3>
                <p class="text-gray-300">Universitas Kristen Maranatha</p>
                <p class="text-gray-300">Bandung, Indonesia</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </body>
</html>